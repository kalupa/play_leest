!!! html
%html
  %head
    %title amazeballs
    %link{href: '/css/main.css', media: 'screen', rel: 'stylesheet', type: 'text/css'}

    %meta(content='width=device-width, height=device-height, user-scalable=no, initial-scale=0.96, maximum-scale=0.96, minimum-scale=0.96' name='viewport')
    %meta(content='yes' name='apple-mobile-web-app-capable')
    %meta(content='chrome=1' http-equiv='X-UA-Compatible')
    %meta(content='on' http-equiv='cleartype')

  %body
    #app
      %h1 Amazeballs Playlist
      #nav
        #soundSelect
          %label{for:'sound_url'} Enter sound URL
          %input#sound_url
          %button#add Add
          %button#stop Stop All
      %ul#list

    %script{src: 'http://connect.soundcloud.com/sdk.js'}

    %script{src: '/js/selector.js', type: 'text/javascript'}
    %script{src: '/js/playlist_manager.js', type: 'text/javascript'}
    %script{src: '/js/player.js', type: 'text/javascript'}
    %script{src: '/js/main.js', type: 'text/javascript'}
